{
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  }, 
  "languageserver": {
    "R": {
          "command": "/usr/local/bin/R",
          "args" : [ "--slave", "-e", "languageserver::run()"],
          "filetypes" : ["r"]
      }
  }
}

